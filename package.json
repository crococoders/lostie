{
  "name": "lostie",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for Lostie application",
  "repository": "git@github.com:crococoders/lostie.git",
  "license": "MIT",
  "author": "crococoders",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --parallel",
    "compile": "lerna run compile --stream",
    "build": "lerna run build --stream",
    "prepare": "husky install",
    "test": "yarn build && jest",
    "test:coverage": "yarn test -- --coverage --collectCoverageFrom=\"./packages/**/src/**\"",
    "test:watch": "yarn build && jest --watch"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "lint-staged": {
    "**/*.ts": "eslint --no-ignore --cache --max-warnings 0"
  },
  "eslintIgnore": [
    "**/node_modules"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@commitlint/config-lerna-scopes": "^17.2.1",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.7",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "lerna": "^6.1.0",
    "prettier": "2.8.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  }
}
